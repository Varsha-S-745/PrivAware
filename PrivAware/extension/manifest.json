
{
  "manifest_version": 3,
  "name": "PrivAware",
  "version": "3.0",
  "description": "Website risk analyzer with backend-powered vulnerability scanning.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:8000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
